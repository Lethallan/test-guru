<% if user_signed_in? %>
  <div id="header">
    <div class="btn-group">
      <%= link_to 'Список всех тестов', admin_tests_path, class: 'btn' %>
      <%= link_to 'Создать тест', new_admin_test_path, class: 'btn' %>
      <%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: 'btn' %>
    </div>
  </div>
 <% else %>
  <div id="header">
    <div class="btn-group">
      <%= link_to 'Войти', new_user_session_path, class: 'btn' %>
      <%= link_to 'Зарегистрироваться', new_user_registration_path, class: 'btn' %>
    </div>
  </div>
 <% end %>